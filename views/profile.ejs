<!doctype html>
<html>
<head>
  <title>Bankr</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.2/css/foundation.min.css">
  <style>
  body   {
    padding-top:80px; word-wrap:break-word;
  }
  .row {
    text-align:center;
  }

  li {
    list-style-type: none;
  }

  </style>
</head>
<body>

    <div class="row">
      <div class="medium-12 columns">
        <img src="https://raw.githubusercontent.com/dlombardi/Bankr/master/views/images/accountInfo.png" alt="account info">
          <div class="page-header text-center">
            <div class="well">
              <img src="http://www.lorempixel.com/150/150/people/2" alt="account information">
              <h3><span class="fa fa-user"></h3>
              <p>
                <strong>name</strong>: <%= user.local.name %><br>
                <strong>Email</strong>: <%= user.local.email %><br>
              </p>
          </div>
      </div>
    </div>
    <hr>

    <div class="row">
      <div class="medium-4 columns">
        <div class="well">
          <h2 align=center> <img src="https://raw.githubusercontent.com/dlombardi/Bankr/master/views/images/postTransactions.png" alt="post transactions"> </h2>
          <form action="/transactions" method="post">
            <div class="form-group">
              <label>Amount: </label>
              <input name=dollars type="number" placeholder="$"/>
            </div>
            <div class="form-group">
              <label>Description: </label>
              <input name=description type="text" placeholder="description"/>
            </div>

            <button class='button round' type=submit>Add Transaction</button>
          </form>
        </div>
      </div>
      <div class="medium-8 columns text-center panel">
        <div class="well">
          <div class='text-center'> <img src="https://raw.githubusercontent.com/dlombardi/Bankr/master/views/images/transactionLog.png" alt="Transaction log"> </div>
          <h2>Balance:<span style="color: green">$<%= user.local.balance %></span></h2>
        </div>
        <div class="medium-12 columns">
          <table>

<% for(var i = 0; i< user.local.transactions.length; i++) { %>
            <tr>   
                <td><strong>$<%= user.local.transactions[i].amount%></strong></td><td> <%= user.local.transactions[i].description%></td><td> <%= user.local.transactions[i].date%> </td>
            </tr>
<% } %>

          </table>
        </div>
      </div>
    </div>




  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.2/js/foundation/foundation.min.js"></script>
  </body>
  </html>
